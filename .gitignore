  @include breakpoint(medium) {
    &__links {
      display: flex;
      flex-direction: row;
      justify-content: start;
      position: initial;
      height: 100%;
      z-index: 1;
      opacity: 1;
      padding: 3rem 4rem;
      transition: none;
      background-color: transparent;

      a {
        opacity: 1;
        padding: 0 1.5rem;
        transition: none;
        color: $grey-white-color;
        transition: step-end .3s cubic-bezier(0.785, 0.135, 0.15, 0.86);

        &:hover {
          color: $green-color;
        }
      }
    }

    &__icons,
    &-social {
      position: absolute;
      right: 5%;
      transform: translate(-5%);
      color: $black-color;
    }
  }

      @include breakpoint(medium) {
      display: none;
    }

        @include breakpoint(medium) {
      position: absolute;
      left: 50%;
      transform: translateX(-50%);

      a {
        text-decoration: none;
        color: $grey-white-color;
      }
    }

      @include breakpoint(medium) {
    display: flex;
    flex-direction: row-reverse;
    justify-content: start;
  }